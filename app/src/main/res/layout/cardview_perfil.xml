<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    card_view:cardCornerRadius="@dimen/corner_radios_cardview"
    android:layout_margin="@dimen/valorPadding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/valorPadding">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/boxer"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvRaitingPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/valorPadding"
                android:text="5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRaiting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_hueso_del_perro2_100"
                android:layout_toRightOf="@+id/tvRaitingPerfil"/>

            <TextView
                android:id="@+id/tvCantComentariosPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/valorPadding"
                android:text="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imgRaiting"/>

            <ImageView
                android:id="@+id/imgComments"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_coment_100"
                android:layout_toRightOf="@+id/tvCantComentariosPerfil"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>